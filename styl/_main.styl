.index-register
  @extend $absolute
  @extend $left
  top 330px

.index-register-form
  width 282px

.index-register-form-label
  @extend $block
  @extend $relative
  margin 13px 0 0 25px
  > [type="text"], > [type="email"], > [type="tel"]
    width 100%
    background #fff
    @extend $relative
    z-index 1
    margin 0
    padding 8px 35px 8px 12px
    border 0 none
    radius(10px)
    font-size 18px
    vertical-align top

.index-register-form-label, .register-complete-label, .form-label
  > .icon-ok, > .icon-cancel
    display none
    @extend $absolute
    right 0
    top 8px
    z-index 1
    font-size 25px
    color $green
  &.valid > .icon-ok
    display inline
  &.invalid > .icon-cancel
    display inline
    color $red

.index-register-form-label, .register-complete-label
  > .icon-user, > .icon-phone
    @extend $absolute
    left -25px
    @extend $top
    @extend $ib
    padding 4px 15px 4px 3px
    radius(10px)
    background #005a69
    color #63abbd
    font-size 16px


.index-register-form-container
  text-align right

.index-register-form-submit
  display none
  @extend $relative
  float right
  background #005a69
  border 0 none
  radius(5px)
  margin 10px 0 0
  padding 1px 0 3px 12px
  color $white
  font-weight bold
  z-index 1
  cursor pointer
  &:hover > input
    color #B3EFFF
  > i
    position static
    padding 0 2px 0 5px
    background transparent

.index-register-form-title
  margin 0 0 0 25px
  white-space nowrap
  color $white
  font bold 20px/20px $fontCondensed
  text-transform uppercase
  text-shadow 0 1px 0 $blue0

