@import mixin
@import typography
@import extension


/************************
*
*      CONSTRUCTION
*
*************************/

typography()

html, body
  height 100%

body
  background #fff
  display table
  width 100%

body.home
  background #fff

#wrapper
  linearGradientBody(#e2f4f9,#fff,80%)
  display table-row-group

#footer
  display table-footer-group
  height 1px

#wrap-header
  background url(img/bg_top_inner.png) no-repeat center top
  @extend $relative

#wrap-header:after, .home #wrap-center:after
  background url(img/bg_shadow.png) no-repeat center top
  content ""
  @extend $block
  width 100%
  height 36px
  @extend $absolute
  @extend $left
  bottom -36px
  border-top 1px solid #fff
  z-index 1

#wrap-header:after
  opacity .5

.home #wrap-header:after
  display none

.home #wrap-header
  background #fff url(img/bg_top.jpg) no-repeat center top

#wrap-center
  background url(img/bg_center_shadow.png) no-repeat center top
  @extend $relative

.home #wrap-center
  background #fff

.home #wrap-center:after
  height 36px

#wrap-business
  background #fff url(img/bg_business.png) no-repeat center 80px
  padding-top 80px
  padding-bottom 50px

#wrap-organize
  background #fff url(img/bg_organize.png) no-repeat center 50px
  padding-top 50px
  padding-bottom 50px

#wrap-footer
  background #fff url(img/bg_footer.png) no-repeat center bottom

$width
  width 980px

$container
  @extend $width
  @extend $m0auto
  @extend $relative

#container-header
  @extend $container
  height 175px

.home #container-header
  height 537px

#container-center
  background #fff url(img/bg_center.jpg) repeat-x
  @extend $container
  padding 50px 40px
  margin-top 0
  min-height 570px
  margin-bottom 0
  > :first-child
    margin-top 0 !important

.home #container-center
  background none
  padding 30px 10px 50px
  min-height 0

#container-business
  @extend $container
  height 513px

#container-organize
  @extend $container
  height 319px

#container-bottom
  @extend $container
  padding 0 0 50px

#container-footer
  @extend $container
  height 169px

.popup-shadow
  display none
  background #000
  position fixed
  @extend $left
  @extend $top
  width 100%
  height 100%
  opacity 0
  z-index 1

.shadow .popup-shadow
  @extend $block

.popup, .alert
  display none
  background #fff
  shadow(0 0 40px 0 rgba(0,0,0,.6))
  width 400px
  height 300px
  position fixed
  left 50%
  top 50%
  margin -150px 0 0 -200px
  z-index 2
  opacity 0

.alert
  opacity 1
  height 200px
  margin-top -100px
  z-index 3

.popup-close
  @extend $block
  @extend $absolute
  right -12px
  top -12px
  width 30px
  height 30px
  background #000
  border 2px solid #fff
  radius(50%)
  shadow(0 0 3px rgba(0,0,0,1))
  text-align center
  font-size 15px
  color $white
  cursor pointer
  transition(transform .2s ease-out)
  &:hover
    transform(scale(1.1))
  > i
    vertical-align middle

[type="text"], [type="email"], [type="tel"]
  width 280px
  padding 5px 10px
  background #fff
  border 1px solid #ccc
  shadow(0 2px 3px rgba(0,0,0,.15) inset)
  font-size 20px
  line-height 24px
  &:focus
    border-color #999

[type="submit"]
  padding 0
  background transparent
  border 0 none
  text-align center
  text-transform uppercase
  font-size 14px
  font-weight bold
  color $white


/************************
*
*         MENU
*
*************************/

.menu
  @extend $mp0

.top-menu
  @extend $absolute
  left 235px
  @extend $top
  > ul
    padding 20px 14px 12px
    font-size 0
    > li
      @extend $ib
      @extend $mp0
      margin 0 12px
      > a, span
        color white
        font-family $fontCondensed
        font-size 16px
        line-height 16px
        text-decoration none
        text-transform uppercase
        border-bottom 1px solid $white
        &:hover
          border-bottom 0 none
      &:before
        display none

.home .top-menu
  background $blue1
  @extend $left

/************************
*
*        HEADER
*
*************************/

.header-contacts
  @extend $absolute
  left 550px
  top 80px
  color $blue1
  font-family $fontCondensed
  font-style normal
  text-shadow 0 -1px 0 #fff
  > span
    padding 0 3px
    vertical-align top
    line-height 34px
    font-size 20px
  > abbr
    font-size 45px
    line-height 45px
  > a
    margin 0 0 0 17px
    font-size 21px
    color inherit
    text-decoration none
    &:hover
      text-decoration underline
    > .icon-mail
      vertical-align middle
  > .icon-phone
    font-size 26px
    margin-right -2px
  &:before,&:after
    content ""
    @extend $block
    @extend $absolute
    top -15px
    width 28px
    height 108px
    background url("img/delimiter.png") no-repeat
  &:before
    left -20px
  &:after
    right -50px

.home .header-contacts
  left 27px
  > abbr
    font-size 52px
    line-height 52px
  > a
    font-size 24px
  > .icon-phone
    font-size 35px
    margin-left -10px

.home .header-contacts:before, .home .header-contacts:after
  display none

.free-30-days
  @extend $absolute
  left 43px
  top 205px
  padding 3px 7px 5px
  background #000
  background rgba(0,0,0,.7)
  color $white
  font-family $fontCondensed
  font-size 19px
  text-align center
  > div
