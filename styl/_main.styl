.our-price
  @extend $absolute
  @extend $right
  top 315px

.our-price-title
  @extend $h1
  margin 0 25px 10px 0
  color $white
  text-shadow 0 1px 0 $blue0
  text-align right
  > a
    color $white
    text-decoration none

.our-price-row
  margin 10px 0 0
