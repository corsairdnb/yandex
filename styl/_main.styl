@import mixin
@import typography

typography()

*
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box

html, body
	height 100%

body
	background #fff
	width 100%
	margin 0
	position relative

.rating
	display inline-block
	position relative
	width 320px
	height 64px

.rating-wrapper
	display flex
	flex-direction row-reverse
	justify-content flex-end
	width 100%
	height 100%

.rating-input
	margin 0
	padding 0
	opacity 0

.rating-input, .rating-star
	flex 1

.rating:hover .rating-star:hover,
.rating:hover .rating-star:hover ~ .rating-star,
.rating-input:checked ~ .rating-star
	background-image url(../../star_2.svg)

.rating-star,
.rating:hover .rating-star
	width 20%
	height 100%
	position absolute
	top 0
	bottom 0
	margin auto
	background-image url(../../star_1.svg)
	background-position 0 0
	background-repeat no-repeat
	background-size cover
	cursor pointer